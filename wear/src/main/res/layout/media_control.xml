<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:layout_gravity="center_horizontal"
        android:weightSum="1"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SpotifyRC - \nCasual Interaction"
            android:id="@+id/ctrl_info_tv"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.25"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_prev"
            android:src="@drawable/material_skip_previous_24dp"
            android:background="@null"
            android:onClick="onPrevBtnClicked" />

        <ToggleButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_play_pause"
            android:textOn=""
            android:textOff=""
            android:background="@null"
            android:button="@drawable/play_pause"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:onClick="onPlayBtnClicked" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_next"
            android:src="@drawable/material_skip_next_24dp"
            android:background="@null"
            android:onClick="onNextBtnClicked" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:layout_gravity="center_horizontal"
        android:gravity="center_vertical|center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ctrl_volume_down"
            android:background="@null"
            android:src="@drawable/material_volume_down_24dp"
            android:layout_marginRight="6dp"
            android:onClick="onVolumeDownBtnClicked" />

        <ToggleButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/ctrl_shuffle"
            android:textOn=""
            android:textOff=""
            android:background="@null"
            android:button="@drawable/shuffle"
            android:layout_marginRight="6dp"
            android:onClick="onShuffleBtnClicked" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ctrl_volume_up"
            android:background="@null"
            android:src="@drawable/material_volume_up_24dp"
            android:onClick="onVolumeUpBtnClicked" />
    </LinearLayout>
</LinearLayout>